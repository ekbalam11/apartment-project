<!DOCTYPE html>
<html lang="en">

<head>
    <title>Tribook</title>
    <%- include('./partials/head') %>
</head>

<body>
    <h1>Home Page</h1>
    <main class="container apartments">
        <% for (const ap of apartments) { %>
            <a href="/apartment/<%= ap._id %>">
                <article class="apartment">
                    <header>
                        <%= ap.title %>
                    </header>
                    <div>
                        <img src="<%= ap.photo %>" alt="">
                    </div>
                    <footer>
                        <%= ap.price %> $ por noche
                    </footer>
                </article>
            </a>
            <% } %>
    </main>
</body>

</html>